pipeline {
   agent any
   tools {nodejs "node"}
 

   stages {
      stage('Cloning Git') {
         steps {
            git 'https://github.com/CrisAlva25/ADYS2_ProyectoClase'
         }
      }
         
      stage('Install dependencies') {
         steps {
            sh 'npm install'
         }
      }
      
      stage('Test') {
         steps {
            echo 'Testing... hola mundo'
         }
      }
      stage('Deploy') {
         steps {
            echo 'Deploying...'
            sh 'ssh ubuntu@ec2-18-222-17-215.us-east-2.compute.amazonaws.com'
            sh 'cd ADYS2_ProyectoClase'
            sh 'git pull origin master'
            sh 'exit'
         }
      }
   }
}
